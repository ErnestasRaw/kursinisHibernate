<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="700.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.kursinis.kursinis_hibernate.fxControllers.PanelController">
    <top>
        <Pane prefHeight="60.0" prefWidth="1100.0" style="-fx-background-color: #293dbb;" BorderPane.alignment="CENTER">
            <Label layoutX="30.0" layoutY="18.0" text="Parduotuvė" textFill="WHITE">
                <font>
                    <Font name="Roboto Medium" size="20.0"/>
                </font>
            </Label>

        </Pane>
    </top>
    <left>
        <Pane prefHeight="640.0" prefWidth="250.0" BorderPane.alignment="CENTER">
            <VBox prefHeight="640.0" prefWidth="250.0" style="-fx-background-color: #0663BE;">
                <Button fx:id="profileButton" alignment="BASELINE_LEFT" mnemonicParsing="false"
                        onAction="#onProfileButtonClicked" prefHeight="50.0" prefWidth="258.0" stylesheets="@style.css"
                        text="Vartojo profilis" textFill="WHITE">
                    <font>
                        <Font name="Roboto Medium" size="16.0"/>
                    </font>
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@user-icon.png"/>
                        </ImageView>
                    </graphic>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <cursor>
                        <Cursor fx:constant="OPEN_HAND"/>
                    </cursor>
                    <padding>
                        <Insets left="30.0"/>
                    </padding>
                </Button>
                <Button fx:id="productsButton" alignment="BASELINE_LEFT" mnemonicParsing="false"
                        onAction="#onProductsButtonClicked" prefHeight="50.0" prefWidth="258.0" stylesheets="@style.css"
                        text="Prekės" textFill="WHITE">
                    <font>
                        <Font name="Roboto Medium" size="16.0"/>
                    </font>
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@product-icon.png"/>
                        </ImageView>
                    </graphic>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <cursor>
                        <Cursor fx:constant="OPEN_HAND"/>
                    </cursor>
                    <padding>
                        <Insets left="30.0"/>
                    </padding>
                </Button>
                <Button fx:id="cartButton" alignment="BASELINE_LEFT" mnemonicParsing="false"
                        onAction="#onCartButtonClicked" prefHeight="50.0" prefWidth="258.0" stylesheets="@style.css"
                        text="Krepšelis" textFill="WHITE">
                    <font>
                        <Font name="Roboto Medium" size="16.0"/>
                    </font>
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@cart-icon.png"/>
                        </ImageView>
                    </graphic>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <cursor>
                        <Cursor fx:constant="OPEN_HAND"/>
                    </cursor>
                    <padding>
                        <Insets left="30.0"/>
                    </padding>
                </Button>
                <Button fx:id="userOrdersButton" alignment="BASELINE_LEFT" mnemonicParsing="false"
                        onAction="#onUserOrderButtonClicked" prefHeight="50.0" prefWidth="258.0"
                        stylesheets="@style.css" text="Mano užsakymai" textFill="WHITE">
                    <font>
                        <Font name="Roboto Medium" size="16.0"/>
                    </font>
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@orders-icon.png"/>
                        </ImageView>
                    </graphic>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <cursor>
                        <Cursor fx:constant="OPEN_HAND"/>
                    </cursor>
                    <padding>
                        <Insets left="30.0"/>
                    </padding>
                </Button>
                <Button fx:id="ordersButton" alignment="BASELINE_LEFT" mnemonicParsing="false"
                        onAction="#onOrdersButtonClicked" prefHeight="50.0" prefWidth="258.0" stylesheets="@style.css"
                        text="Visi užsakymai" textFill="WHITE">
                    <font>
                        <Font name="Roboto Medium" size="16.0"/>
                    </font>
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@user-icon.png"/>
                        </ImageView>
                    </graphic>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <cursor>
                        <Cursor fx:constant="OPEN_HAND"/>
                    </cursor>
                    <padding>
                        <Insets left="30.0"/>
                    </padding>
                </Button>
                <Button fx:id="warehouseButton" alignment="BASELINE_LEFT" mnemonicParsing="false"
                        onAction="#onWarehouseButtonClicked" prefHeight="50.0" prefWidth="258.0"
                        stylesheets="@style.css" text="Sandėliai" textFill="WHITE">
                    <font>
                        <Font name="Roboto Medium" size="16.0"/>
                    </font>
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@user-icon.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <cursor>
                        <Cursor fx:constant="OPEN_HAND"/>
                    </cursor>
                    <padding>
                        <Insets left="30.0"/>
                    </padding>
                </Button>
                <Button fx:id="usersButton" alignment="BASELINE_LEFT" mnemonicParsing="false"
                        onAction="#onUsersButtonClicked" prefHeight="50.0" prefWidth="258.0" stylesheets="@style.css"
                        text="Vartotojai" textFill="WHITE">
                    <font>
                        <Font name="Roboto Medium" size="16.0"/>
                    </font>
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@user-icon.png"/>
                        </ImageView>
                    </graphic>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <cursor>
                        <Cursor fx:constant="OPEN_HAND"/>
                    </cursor>
                    <padding>
                        <Insets left="30.0"/>
                    </padding>
                </Button>
            </VBox>
        </Pane>
    </left>
    <right>
        <AnchorPane prefHeight="640.0" prefWidth="850.0" BorderPane.alignment="CENTER">
            <StackPane fx:id="contentArea" prefHeight="640.0" prefWidth="850.0" AnchorPane.bottomAnchor="0.0"
                       AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <rotationAxis>
                    <Point3D/>
                </rotationAxis>
            </StackPane>
        </AnchorPane>
    </right>
</BorderPane>
