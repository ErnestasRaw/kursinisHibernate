<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<Pane prefHeight="450.0" prefWidth="700.0" style="-fx-background-color: #0663BE;"
      xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.kursinis.kursinis_hibernate.fxControllers.RegistrationController">
    <Pane layoutX="59.0" layoutY="35.0" prefHeight="380.0" prefWidth="582.0" style="-fx-background-color: #ffffff;">

        <Text fill="#0663be" layoutX="31.0" layoutY="41.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Registracija">
            <font>
                <Font name="Roboto Medium" size="30.0"/>
            </font>
        </Text>

        <TextField fx:id="loginField" layoutX="31.0" layoutY="56.0" prefHeight="40.0" prefWidth="253.0"
                   promptText="Vartotojo vardas" stylesheets="@style.css"/>
        <TextField fx:id="nameField" layoutX="31.0" layoutY="106.0" prefHeight="40.0" prefWidth="253.0"
                   promptText="Vardas" stylesheets="@style.css"/>
        <TextField fx:id="surnameField" layoutX="31.0" layoutY="153.0" prefHeight="40.0" prefWidth="253.0"
                   promptText="Pavardė" stylesheets="@style.css"/>
        <TextField fx:id="countryField" layoutX="31.0" layoutY="201.0" prefHeight="40.0" prefWidth="253.0"
                   promptText="Šalis" stylesheets="@style.css"/>
        <TextField fx:id="cityField" layoutX="31.0" layoutY="249.0" prefHeight="40.0" prefWidth="253.0"
                   promptText="Miestas" stylesheets="@style.css"/>
        <TextField fx:id="addressField" layoutX="298.0" layoutY="56.0" prefHeight="40.0" prefWidth="253.0"
                   promptText="Adresas" stylesheets="@style.css"/>
        <DatePicker fx:id="birthDateField" layoutX="298.0" layoutY="106.0" prefHeight="40.0" prefWidth="253.0"
                    promptText="Gimimo data"/>
        <TextField fx:id="cardNoField" layoutX="298.0" layoutY="153.0" prefHeight="40.0" prefWidth="253.0"
                   promptText="Kortelės numeris" stylesheets="@style.css"/>
        <PasswordField fx:id="passwordField" layoutX="298.0" layoutY="201.0" prefHeight="40.0" prefWidth="253.0"
                       promptText="Slaptažodis" stylesheets="@style.css"/>
        <PasswordField fx:id="repeatPasswordField" layoutX="298.0" layoutY="249.0" prefHeight="40.0" prefWidth="253.0"
                       promptText="Pakartokite slaptažodį" stylesheets="@style.css"/>
        <Button fx:id="registerButton" layoutX="298.0" layoutY="320.0" mnemonicParsing="false"
                onAction="#registerUser" prefHeight="40.0" prefWidth="253.0" stylesheets="@style.css"
                text="Registruotis" textFill="WHITE">
            <font>
                <Font name="Roboto Medium" size="24.0"/>
            </font>
        </Button>
    </Pane>
</Pane>
